<% provide(:title, "#{@message_thread.forum.title} | #{@message_thread.title}") %>
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @message_thread.title %>
</p>

<p>
  <b>Author:</b>
  <%= @message_thread.author_id %>
</p>

<p>
  <b>Forum:</b>
  <%= @message_thread.forum_id %>
</p>

<%= render @message_thread.message_posts %>

<hr>

<%= form_for(:message_post, url: message_posts_path) do |f| %> 

	<%= f.label "Comment" %> 
	<%= f.text_area :content %> 
	
	<%= f.hidden_field :message_thread_id %>
	<%= hidden_field_tag :message_thread_id, @message_thread.id  %>

	<%= f.submit "Submit Comment", class: "btn btn-large btn-primary" %> 
<% end %> 
